type Maybe a { Just a | Nothing }

mapMaybe : [a -- b] (Maybe a) -- (Maybe b)
         =: [
    { case
        | Just -> apply Just
        | Nothing -> dropp Nothing
    }
]

isJust : (Maybe a) -- Bool
       =: [
    { case
        | Just -> drop True
        | Nothing -> False
    }
]

isNothing : (Maybe a) -- Bool
          =: [
    { case
        | Nothing -> True
        | Just -> drop False
    }
]
